# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/retailscore_db

# SendGrid Email Service
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@retailscore.ai
SENDGRID_FROM_NAME=RetailScore AI

# JWT Secrets (IMPORTANT: Use strong, randomly generated secrets in production)
JWT_ACCESS_SECRET=your-super-secret-access-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# OTP Configuration
OTP_EXPIRY_MINUTES=15
OTP_RATE_LIMIT_COUNT=3
OTP_RATE_LIMIT_WINDOW_MINUTES=30

# Logging
LOG_LEVEL=info
